{
  "name": "io.cordova.hellocordova",
  "displayName": "HelloCordova",
  "version": "1.0.0",
  "description": "A sample Apache Cordova application that responds to the deviceready event.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "run-all 'npm run dev:sass' 'npm run dev:build'",
    "dev:build": "nodemon -e mjs,js,jsx,ts,tsx,css -w app -w www/css -w build.mjs build.mjs",
    "dev:sass": "nodemon -e scss -w ./app/scss build-sass.js"
  },
  "keywords": [
    "ecosystem:cordova"
  ],
  "author": "Apache Cordova Team",
  "license": "Apache-2.0",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "dayjs": "^1.11.0",
    "eslint": "^8.12.0",
    "eslint-plugin-sonarjs": "^0.12.0",
    "modern-css-reset": "^1.4.0",
    "nodemon": "^2.0.15",
    "run-all": "^1.0.1",
    "sass": "^1.49.9",
    "valyrian.js": "^7.0.2"
  }
}